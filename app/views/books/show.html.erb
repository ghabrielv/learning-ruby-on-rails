<div class="book-page">
  <div class="container">
    <%= link_to "&larr; Back".html_safe, books_path, class: "btn btn-link" %>

    <header class="main">
      <h2><%= @book.title %></h2>
      <div class="author"><%= @book.author %></div>
    </header>

    <div class="book d-flex flex-sm-row align-items-center align-items-sm-start">
      <img src="<%= @book.image_url %>" alt="<%= @book.title %>">
      <div class="book-details">
        <p><%= @book.description %></p>
        <dl>
          <dt>Publication date</dt>
          <dd><%= @book.publication_date %></dd>
          <dt>Price</dt>
          <dd><%= @book.price %></dd>
        </dl>
        <div class="text-right">
          <% if signed_in? %>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-link" %>
            <%= link_to "Delete", @book, class: "btn btn-link text-danger", method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %>
          <% end %>
        </div>

        <%= render "comments" %>
      </div>
    </div>
  </div>
</div>
